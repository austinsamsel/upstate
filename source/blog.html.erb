---
layout: layout_blog
pageable: true
per_page: 10
---

<!-- <span class="section-title blog-title">Blog</span> -->
<!-- <strong>high tops</strong> - <strong class="highlight2 large">blog</strong> -->
<!-- <hr> -->

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li class="blog-item">
      <h5><%= article.date.strftime('%b %e') %></h5>
      <h1><%= link_to article.title, article %></h1>
      <p><%= article.summary %></p>
      <div class="read-more-container">
        <a href="<%= article.url %>"><button class="read-more-button read-more-link"><i class="fa fa-link"></i> Read more</button> </a>
      </div>
    </li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
