<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>Up State Blog<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "blog" %>
    <link href='http://fonts.googleapis.com/css?family=Archivo+Black|Archivo+Narrow:400,700,400italic|Enriqueta:400,700' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag "all", "layout_blog" %>
  </head>
  <body>
    <%= partial "partials/nav" %>

    <div id="blog-content" role="main">
      <h1><%= current_article.title %></h1>
      <%= yield %>
      <%= partial "partials/mailchimp" %>
      <%= partial "partials/footer" %>
    </div>



    <%= google_analytics_tag %>
  </body>
</html>
